  <script>
    // Script para togglear detalle al clic (acordeón simple)
    document.querySelectorAll('.subtitulo').forEach(function(titulo) {
      titulo.addEventListener('click', function() {
        const expanded = this.getAttribute('aria-expanded') === 'true';
        this.setAttribute('aria-expanded', !expanded);
        this.classList.toggle('collapsed');
        const detalle = this.nextElementSibling;
        if (detalle.style.display === 'none') {
          detalle.style.display = 'block';
        } else {
          detalle.style.display = 'none';
        }
      });

      // También abrir con tecla Enter o Space
      titulo.addEventListener('keydown', function(e){
        if(e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          this.click();
        }
      });
    });
  </script>
